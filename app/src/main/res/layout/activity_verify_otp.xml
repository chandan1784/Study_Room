<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center">

    <!-- OTP Input Field -->
    <EditText
        android:id="@+id/editTextOtp"
        android:layout_width="271dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_box"
        android:hint="Enter OTP"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <!-- Verify Button -->
    <Button
        android:id="@+id/buttonVerify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextOtp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:text="Verify"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center"/>

    <!-- Resend OTP Text -->
    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/buttonVerify"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/app_background" />

    <TextView
        android:id="@+id/textViewResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_progress_bar"
        android:layout_marginTop="16dp"
        android:text="Resend OTP in 15 sec"
        android:textColor="#0000FF"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
